<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.n0stalgiaultra.view.fragments.AdvancedSearchCep">
    <TextView
        android:id="@+id/tv_digiteCep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busque informações sobre seu CEP abaixo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".2" />

    <EditText
        android:id="@+id/et_estado"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:hint="Digite o estado, exemplo: RJ"
        android:gravity="center"
        android:inputType="text"

        android:layout_margin="@dimen/_10sdp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_digiteCep"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/et_cidade"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:hint="Digite a cidade"
        android:gravity="center"
        android:inputType="text"


        android:layout_margin="@dimen/_10sdp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_digiteCep"
        app:layout_constraintVertical_bias="0.3" />

    <EditText
        android:id="@+id/et_rua"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"


        android:hint="Digite a rua ou alguma palavra da rua"

        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_digiteCep"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btn_buscaCEP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="192dp"

        android:text="Buscar informações"
        android:textSize="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_rua"
        app:layout_constraintVertical_bias="0.4" />
</androidx.constraintlayout.widget.ConstraintLayout>